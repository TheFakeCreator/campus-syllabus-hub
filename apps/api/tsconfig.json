{
    "extends": "../../packages/tsconfig/node.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "src",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "paths": {
            "@config/*": [
                "config/*"
            ],
            "@db/*": [
                "db/*"
            ],
            "@middleware/*": [
                "middleware/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}